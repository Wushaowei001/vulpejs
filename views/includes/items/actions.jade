div(ng-class="{'btn-group':selectItem.email !== vulpejs.userDetails.email}")
  a.btn.btn-primary.btn-xs(ng-click="vulpejs.find(selectItem._id)" title=__('Edit'))
    i.fa.fa-pencil.fa-fw
    =__('Edit')
  a.btn.btn-primary.btn-xs.dropdown-toggle(data-toggle="dropdown" href="#" ng-if="vulpejs.hasRoles(['SUPER','ADMIN']) && selectItem.email !== vulpejs.userDetails.email")
    span.caret
  ul.dropdown-menu(ng-if="vulpejs.hasRoles(['SUPER','ADMIN']) && selectItem.email !== vulpejs.userDetails.email")
    li
      a(ng-click="vulpejs.remove(selectItem._id)" title=__('Delete'))
        i.fa.fa-trash-o.fa-fw
        =__('Delete')
    li
      a(ng-click="vulpejs.clone(selectItem)" title=__('Clone'))
        i.fa.fa-magic.fa-fw
        =__('Clone')
    li(ng-if="vulpejs.equals(selectItem, 'status', 'ACTIVE')")
      a(ng-click="vulpejs.status(selectItem._id, 'INACTIVE')" title=__('Deactivate'))
        i.fa.fa-ban.fa-fw
        =__('Deactivate')
    li(ng-if="vulpejs.equals(selectItem, 'status', 'INACTIVE')")
      a(ng-click="vulpejs.status(selectItem._id, 'ACTIVE')" title=__('Activate'))
        i.fa.fa-check-circle-o.fa-fw
        =__('Activate')
